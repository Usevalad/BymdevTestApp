<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Ripple">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Ripple.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Wide.Ripple" parent="Ripple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wide.Indented.Ripple" parent="Ripple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_margin</item>
    </style>

    <style name="Wide.Ripple.Borderless" parent="Ripple.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Wide.Indented.Ripple.Borderless" parent="Wide.Ripple.Borderless">
        <item name="android:layout_marginEnd">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_margin</item>
    </style>

    <style name="Wrapped.Ripple" parent="Ripple">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Wrapped.Ripple.Borderless" parent="Ripple.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>