<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Colored-->
    <style name="Wrapped.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Default.Button.Colored" parent="Wrapped.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/screen_horizontal_margin</item>
    </style>

    <!--Borderless-->
    <style name="Wrapped.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Default.Button.Borderless" parent="Wrapped.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Borderless.Colored-->
    <style name="Wrapped.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Default.Button.Borderless.Colored" parent="Wrapped.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
